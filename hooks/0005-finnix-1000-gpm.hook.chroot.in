#!/bin/sh

set -e

cat <<EOM >/etc/systemd/system/gpm.service
[Unit]
SourcePath=/etc/init.d/gpm
Description=LSB: gpm sysv init script
Before=multi-user.target
Before=graphical.target
Before=finnix.target
After=remote-fs.target

[Service]
Type=forking
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
SuccessExitStatus=5 6
ExecStart=/etc/init.d/gpm start
ExecStop=/etc/init.d/gpm stop
EOM
systemctl add-wants finnix.target gpm.service
