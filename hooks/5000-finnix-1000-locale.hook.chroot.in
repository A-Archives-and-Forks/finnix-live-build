# Must be run after 0040-create-locales-files.hook.chroot

set -e

echo 'LANG=en_US.UTF-8' >/etc/default/locale
sed -i -e 's/^# en_US.UTF-8 /en_US.UTF-8 /g' /etc/locale.gen
locale-gen

install -D -m 0755 /hook-files/0 /usr/local/sbin/0
